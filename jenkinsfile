pipeline{
    agent any
    environment {
        registry = "598189530267.dkr.ecr.ap-south-1.amazonaws.com/pumejrepo"
        //AWS_ECR_PASSWORD=$(aws ecr get-login-password --region ap-south-1)
    }
    stages{
        stage ('Git Checkout') {
            steps {
                git branch: 'pumejbranch', credentialsId: 'git_credentials', url: 'https://github.com/Mexxy-lab/dockerize-python-flask2.git'
            }
        }
        stage ('Docker Build') {
            steps {
                script {
                    dockerImage = docker.build registry
                }
            }
        }
        stage ('Authenticate with AWS ECR') {
           steps {
              script {
                 // Run the AWS CLI command to get the ECR login password
                 def awsEcrPassword = bat(script: 'aws ecr get-login-password --region ap-south-1', returnStdout: true).trim()

                 // Log in to ECR using the retrieved password
                 bat "docker login --username AWS --password-stdin 598189530267.dkr.ecr.ap-south-1.amazonaws.com <<< '${awsEcrPassword}'"
              }
           }
        }
        stage ('Docker Push to AWS Repo') {
            steps {
                script {
                    bat 'docker push 598189530267.dkr.ecr.ap-south-1.amazonaws.com/pumejrepo:pythonflask1.0.0'
                }
            }
        }
    }
}